<div class="row">
		<div class="col-md-4">
			<img src="/images/product/{{product.imagePath}}" class="img-responsive" style="max-height: 330px">
		</div>
		<div class="col-md-8">
			<h1> {{product.title}} </h1>
			<div class="col-sm-4 col-md-2">
				<input type="number" class="form-control" id="qty" name="qty" value="1" min="0" max="1000" style="width: 69px">
			</div>
			<div class="col-sm-8 col-md-10">
				<p style="float: left"><a href="/add-to-cart/{{product._id}}" class="btn btn-success pull-right" role="button">Add to Cart</a></p>
			</div>
			<hr><br/>
			<span style="font-weight: bold">Description:</span> {{product.description}}
		</div>
</div>
