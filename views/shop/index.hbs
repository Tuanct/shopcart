<div class="row">
{{# each products}}
  	<div class="col-sm-4 col-md-3">
	    <div class="thumbnail">
	      	<img src="/images/product/{{ this.imagePath }}" alt="..." class="img-responsive" style="max-height: 330px">
	      	<div class="caption">
	        	<h3>{{ this.title }}</h3>
	        	<p class="description">{{ this.description }} </p>
	        	<div class="clearfix">
		        	<div class="price">{{ this.price }}</div>
		        	<p><a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Cart</a></p>
	        	</div>
	      	</div>
	    </div>
  	</div>
{{/each}}
</div>