<div class="row">
	<div class="col-sm-6 col-md-6 col-sm-offset-3 col-offset-md-4">
		<div id="success" class="alert alert-success {{# if noMessage }}hidden {{/ if }}">
			{{ successMsg }}
		</div>
	</div>
</div>

<div class="row">
	{{# each products}}
	  	<div class="col-sm-4 col-md-3" style="height: 650px">
		    <div class="thumbnail">
		      	<a href="/detail/{{this._id}}"><img src="/images/product/{{ this.imagePath }}" alt="..." class="img-responsive" style="max-height: 330px">
		      	<div class="caption">
		        	<h3>{{ this.title }}</h3></a>
		        	<p class="description">{{ this.description }} </p>
		        	<div class="clearfix">
			        	<div class="price">{{ this.price }}</div>
			        	<p><a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Cart</a></p>
		        	</div>
		      	</div>
		    </div>
	  	</div>
	{{/each}}
</div>