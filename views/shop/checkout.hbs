<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<h1>Checkout</h1>
		<h4>Your Total: ${{total}}</h4>
		<div class="payment-errors alert alert-danger hidden"></div>
		<form action="/checkout" method="post" id="checkout-form">
			<div class="col-md-12">
				<div class="form-group">
					<label for="email">Name</label>
					<input type="text" id="name" name="name" class="form-control" required>
				</div>
			</div>

			<div class="col-md-12">
				<div class="form-group">
					<label for="password">Address</label>
					<input type="text" id="address" name="address" class="form-control" required>
				</div>
			</div>

			<div class="col-md-12">
				<div class="form-group">
					<label for="password">Cart Holder Name</label>
					<input type="text" id="cart-name" name="cart-name" class="form-control" required>
				</div>
			</div>

			<div class="col-md-12">
				<div class="form-group">
					<label for="password">Credit Cart Name</label>
					<input type="text" id="cart-number" name="cart-number" class="form-control" required>
				</div>
			</div>

			<div class="col-md-6">
				<div class="form-group">
					<label for="password">Expiration Month</label>
					<input type="text" id="exp-month" name="exp-month" class="form-control" required>
				</div>
			</div>

			<div class="col-md-6">
				<div class="form-group">
					<label for="password">Expiration Year</label>
					<input type="text" id="exp-year" name="exp-year" class="form-control" required>
				</div>
			</div>

			<div class="col-md-12">
				<div class="form-group">
					<label for="password">CVC</label>
					<input type="text" id="cvc" name="cvc" class="form-control" required>
				</div>
			</div>

			<button type="submit" class="btn btn-success">Buy now</button>
		</form>
	</div>
</div>
<div style="height:100px"></div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="javascripts/shop/checkout.js"></script>